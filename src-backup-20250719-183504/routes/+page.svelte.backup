  :global(body) {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  /* Dark mode support */
  :global(.dark) {
    color-scheme: dark;
  }

  /* Smooth scrolling */
  :global(html) {
    scroll-behavior: smooth;
  }

  /* Custom scrollbar */
  :global(::-webkit-scrollbar) {
    width: 8px;
