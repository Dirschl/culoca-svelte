{
	"name": "culoca-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"postinstall": "npm rebuild sharp --platform=linux --arch=x64",
		"postinstall:vercel": "node scripts/install-playwright-browsers.js",
		"db:check": "./tools/pre-deployment-check.sh",
		"db:check:staging": "./tools/pre-deployment-check.sh staging",
		"db:check:production": "./tools/pre-deployment-check.sh production",
		"db:validate": "psql $DATABASE_URL -f tools/function-validator.sql",
		"db:migrate": "echo 'Run your migration SQL file in Supabase'",
		"auto-rotate": "node tools/auto-rotate-images-v2.mjs",
		"auto-rotate:item": "node tools/auto-rotate-images-v2.mjs",
		"predeploy": "npm run db:check:production",
		"postdeploy": "echo 'Deployment completed successfully'"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-vercel": "^3.0.0",
		"@sveltejs/kit": "^1.29.0",
		"@tailwindcss/postcss": "^4.1.11",
		"@types/justified-layout": "^4.1.4",
		"@types/leaflet": "^1.9.19",
		"@types/leaflet.markercluster": "^1.5.5",
		"@vitest/browser": "^3.2.3",
		"autoprefixer": "^10.4.17",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"postcss": "^8.4.38",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^4.2.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^4.4.9",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.50.2",
		"dotenv": "^17.0.0",
		"exifr": "^7.1.3",
		"html2canvas": "^1.4.1",
		"jszip": "^3.10.1",
		"justified-layout": "^4.1.0",
		"jwt-decode": "^4.0.0",
		"leaflet": "^1.9.4",
		"leaflet.markercluster": "^1.5.3",
		"lucide-svelte": "^0.525.0",
		"node-fetch": "^3.3.2",
		"playwright": "^1.53.0",
		"sharp": "^0.32.0",
		"webdav": "^5.8.0"
	},
	"engines": {
		"node": "20.x"
	}
}
